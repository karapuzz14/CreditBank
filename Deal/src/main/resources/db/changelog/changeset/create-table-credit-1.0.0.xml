<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
  <changeSet id="2" author="Kirill">
    <createTable tableName="credit">
      <column name="credit_id" type="uuid">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="amount" type="number"/>
      <column name="term" type="int"/>
      <column name="monthly_payment" type="number"/>
      <column name="rate" type="number"/>
      <column name="psk" type="number"/>
      <column name="payment_schedule" type="jsonb"/>
      <column name="insurance_enabled" type="boolean"/>
      <column name="salary_client" type="boolean"/>
      <column name="credit_status" type="varchar(10)"/>
    </createTable>
  </changeSet>
</databaseChangeLog>